<div class="container">

    <div class="card">
        <div class="card-image">
            <div class="card-image-gradient">
                <img src="/images/project_idea.png">
            </div>
            <span class="card-title"><h1>{{project_data.project_name}}</h1></span>
        </div>

        <div class="card-content">

            <table class="centered responsive-table">
                <thead>
                    <tr>
                    <th>Project Name</th>
                    <th>Team</th>
                    <th>Project Type</th>
                    <th>Languages</th>
                    <th>Platforms</th>
                    
                    <!-- ADMIN ONLY BUTTONS -->
                    <th>Creator Op</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                    {{#with project_data}}
                    <td>{{project_name}}</td>
                    <td>{{team_name}}</td>
                    <td>{{project_type}}</td>
                    <td>{{project_languages}}</td>
                    <td>{{project_platforms}}</td>
                    
                    <!-- ADMIN ONLY BUTTONS -->
                    <td nowrap>
                        
                        <!-- Alternatively to going to a new page, trigger a modal ??-->
                        <a class="btn-floating waves-effect waves-light green lighten-1" href="/projects/{{project_id}}/modify"><i class="material-icons">edit</i></a>
                        <a class="btn-floating waves-effect waves-light red" onclick='confirmDelete("{{project_name}}","{{ project_id}}", "/projects.html")'><i class="material-icons">delete</i></a>

                    </td>
                    </tr>

                </tbody>
            </table>
            <div class="card-action grey lighten-4">{{project_description}}</div>

            {{/with}}

        </div>
    </div>
</div>

<script src="/js/event_utils.js"></script>